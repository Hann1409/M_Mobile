<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F2FD"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgEmployee"
                        android:layout_width="203dp"
                        android:layout_height="166dp"
                        app:srcCompat="@mipmap/ic_emp" />

                    <TextView
                        android:id="@+id/txtEmployee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/title_employee"
                        android:textAlignment="center"
                        android:textColor="#03A9F4"
                        android:textSize="24sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgCustomer"
                        android:layout_width="208dp"
                        android:layout_height="166dp"
                        app:srcCompat="@mipmap/ic_cus" />

                    <TextView
                        android:id="@+id/txtCustomer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/title_customer"
                        android:textAlignment="center"
                        android:textColor="#03A9F4"
                        android:textSize="24sp" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgProduct"
                        android:layout_width="203dp"
                        android:layout_height="166dp"
                        app:srcCompat="@mipmap/ic_product" />

                    <TextView
                        android:id="@+id/txtProduct"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/title_product"
                        android:textAlignment="center"
                        android:textColor="#03A9F4"
                        android:textSize="24sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgAdvancedProduct"
                        android:layout_width="208dp"
                        android:layout_height="166dp"
                        app:srcCompat="@mipmap/ic_advanced_product" />

                    <TextView
                        android:id="@+id/txtAdvancedProduct"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/title_advanced_product"
                        android:textAlignment="center"
                        android:textColor="#03A9F4"
                        android:textSize="24sp" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgPayment"
                        android:layout_width="203dp"
                        android:layout_height="166dp"
                        app:srcCompat="@mipmap/ic_payment_method" />

                    <TextView
                        android:id="@+id/txtPayment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/title_payment"
                        android:textAlignment="center"
                        android:textColor="#2196F3"
                        android:textSize="24sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgOrder"
                        android:layout_width="203dp"
                        android:layout_height="166dp"
                        app:srcCompat="@mipmap/ic_order" />

                    <TextView
                        android:id="@+id/txtOrder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/title_order"
                        android:textAlignment="center"
                        android:textColor="#2196F3"
                        android:textSize="24sp" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgTelephony"
                        android:layout_width="203dp"
                        android:layout_height="166dp"
                        app:srcCompat="@mipmap/ic_telephony" />

                    <TextView
                        android:id="@+id/txtTelephony"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/title_telephony"
                        android:textAlignment="center"
                        android:textColor="#2196F3"
                        android:textSize="24sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgMultiThreading"
                        android:layout_width="203dp"
                        android:layout_height="166dp"
                        app:srcCompat="@mipmap/ic_multi_threading" />

                    <TextView
                        android:id="@+id/txtMultiThreading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/title_multi_threading"
                        android:textAlignment="center"
                        android:textColor="#2196F3"
                        android:textSize="24sp" />
                </LinearLayout>
            </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgContact"
                    android:layout_width="203dp"
                    android:layout_height="166dp"
                    app:srcCompat="@mipmap/ic_contact" />

                <TextView
                    android:id="@+id/txtContact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_contact"
                    android:textAlignment="center"
                    android:textColor="#2196F3"
                    android:textSize="24sp" />
            </LinearLayout>
        </TableRow>
        </TableLayout>
    </LinearLayout>
</ScrollView>